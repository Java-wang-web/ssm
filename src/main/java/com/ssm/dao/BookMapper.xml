<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssm.dao.BookMapper">

    <!--增加一个Book-->
    <insert id="addBook" parameterType="Book">
      insert into book(bName,bCount,bDeatil)
      values (#{bName}, #{bCount}, #{bDeatil})
   </insert>

    <!--根据id删除一个Book-->
    <delete id="deleteBookById" parameterType="int">
      delete from book where bId=#{bId}
   </delete>

    <!--更新Book-->
    <update id="updateBook" parameterType="Book">
      update book
      set bName = #{bName},bCount= #{bCount},bDeatil = #{bDeatil}
      where bId = #{bId}
   </update>

    <!--根据id查询,返回一个Book-->
    <select id="queryBookById" resultType="Book">
      select * from book
      where bId = #{bId}
   </select>

    <!--查询全部Book-->
    <select id="queryAllBook" resultType="Book">
      SELECT * from book
   </select>

    <select id="queryBookByName" resultType="Book">
        select * from book where bName like "%"#{bName}"%"
    </select>

</mapper>